@model IEnumerable<webdemo.Areas.Admin.Models.OrderPro>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}

<h2>DANH SÁCH CÁC ĐƠN HÀNG</h2>

<p>
    @Html.ActionLink("Tạo đơn hàng mới", "Create")
</p>
<table class="table table-bordered" style="border-width:thick">
    <tr>
        <th> Ngày giao hàng </th>
        <th> Địa chỉ giao hàng </th>
        <th> Khánh hàng </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DateOrder)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AddressDeliverry)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.NameCus)
            </td>
            <td>
                @Html.ActionLink("sửa", "Edit", new { id = item.ID }) |
                @Html.ActionLink("chi tiết", "Details", new { id = item.ID }) |
                @Html.ActionLink("xóa", "Delete", new { id = item.ID })
            </td>
        </tr>
    }

</table>
